{
  "name": "electron-local-transcode-test",
  "version": "1.0.12",
  "description": "Electron Local Transcode Test",
  "main": ".compiled/index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel src --out-dir .compiled --source-maps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist-win": "build --win --x64",
    "dist-mac": "build --mac",
    "dist-linux": "build --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "-",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.13",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bluebird": "^3.5.1",
    "electron-is-running-in-asar": "^1.0.0",
    "electron-window-state": "^4.1.1",
    "readline": "^1.3.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "electron": "^1.7.12",
    "electron-builder": "^19.52.1",
    "electron-rebuild": "^1.7.3"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.7.12"
          },
          "sourceMaps": "inline"
        }
      ]
    ]
  },
  "build": {
    "appId": "jp.espresso3389.electron-local-transcode-test",
    "copyright": "(C) 2018 Takashi Kawasaki (@espresso3389). All rights reserved.",
    "asar": true,
    "productName": "Electron Local Transcode Test",
    "files": [
      ".compiled/*",
      ".compiled/**/*",
      "src/*",
      "src/**/*",
      "!.compiled/*.map",
      "!src/**/*.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "artifactName": "${name}-setup-${version}-${os}.${ext}"
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "artifactName": "${name}-setup-${version}-${os}.${ext}"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "artifactName": "${name}-setup-${version}-${os}.${ext}"
    },
    "linux": {
      "icon": "build/icons",
      "artifactName": "${name}-setup-${version}-${os}.${ext}"
    }
  }
}
